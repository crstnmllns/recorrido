<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px; background-color: #f8f9fa;">
    <div class="card-body text-center">
      <h2 class="card-title text-center mb-4">Iniciar Sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3 text-center">
          <%= f.label :email, class: "form-label d-block" %>
          <%= f.email_field :email, class: "form-control mx-auto", autofocus: true, autocomplete: "email", style: "max-width: 300px;" %>
        </div>

        <div class="mb-3 text-center">
          <%= f.label :password, class: "form-label d-block" %>
          <%= f.password_field :password, class: "form-control mx-auto", autocomplete: "current-password", style: "max-width: 300px;" %>
        </div>

        <div class="mb-3 form-check text-center">
          <%= f.check_box :remember_me, class: "form-check-input mx-auto", style: "margin-left: -1.25rem;" if devise_mapping.rememberable? %>
          <%= f.label :remember_me, class: "form-check-label", style: "margin-left: 0.25rem;" if devise_mapping.rememberable? %>
        </div>

        <div class="d-grid">
          <%= f.submit "Iniciar Sesión", class: "btn btn-success" %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
