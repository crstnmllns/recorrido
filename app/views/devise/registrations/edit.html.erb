<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px; background-color: #f8f9fa;">
    <div class="card-body text-center">
      <h2 class="card-title text-center mb-4">Editar Perfil</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="mb-3 text-center">
          <%= f.label :name, class: "form-label d-block" %>
          <%= f.text_field :name, class: "form-control mx-auto", autofocus: true, style: "max-width: 300px;" %>
        </div>

        <div class="mb-3 text-center">
          <%= f.label :email, class: "form-label d-block" %>
          <%= f.email_field :email, class: "form-control mx-auto", style: "max-width: 300px;" %>
        </div>

        <div class="mb-3 text-center">
          <%= f.label :password, class: "form-label d-block" %>
          <%= f.password_field :password, class: "form-control mx-auto", autocomplete: "new-password", style: "max-width: 300px;" %>
          <small>(deja en blanco si no quieres cambiarla)</small>
        </div>

        <div class="mb-3 text-center">
          <%= f.label :password_confirmation, class: "form-label d-block" %>
          <%= f.password_field :password_confirmation, class: "form-control mx-auto", autocomplete: "new-password", style: "max-width: 300px;" %>
        </div>

        <div class="mb-3 text-center">
          <%= f.label :current_password, class: "form-label d-block" %>
          <%= f.password_field :current_password, class: "form-control mx-auto", autocomplete: "current-password", style: "max-width: 300px;" %>
          <small>Necesario para confirmar cambios</small>
        </div>

        <div class="d-grid">
          <%= f.submit "Actualizar", class: "btn btn-success" %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="text-center">
        <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
